{% extends '@front/base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/bootstrap-theme.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" />
{% endblock %}
{% block title %}
    BMARTIN CONSULTING
{% endblock %}
{% block body %}
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li> <a href={{ path('front_home') }}>Accueil</a> </li>
                <li> <a href={{ path('front_reference') }}>Références</a> </li>
            </ul>
        </div>
    </nav>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="{{ asset('carousselOne.jpg') }}" alt="slideOne">
                <div class="carousel-caption text-center">
                    <h2 style="color: #FFFFFF">B.Martin-Consultant</h2>
                    <p>Le numérique au service de votre stratégie</p>
                </div>
            </div>
            <div class="item">
                <img src="{{ asset('carousselTwo.jpg') }}" alt="Chicago">
                <div class="carousel-caption text-center">
                    <h2 style="color: #FFFFFF">B.Martin-Consultant</h2>
                    <p>Le numérique au service de votre stratégie</p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        </a>
    </div>
    <div class="row-fluid" style="width: 100%">
        <div style="float: left; width: 50%">
            <div class="text-center">
                {% block text %}<p style="line-height: 170%; margin-top: 25%; font-size: 150%"><!--Lorem ipsum dolor sit amet, consectetur<br>
